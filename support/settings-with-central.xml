				<snapshots>
					<enabled>false</enabled>
				</snapshots>
			</pluginRepository>
		</pluginRepositories>
	</profile>
  </profiles>

  <activeProfiles>
   <activeProfile>jboss-wfk2-repository</activeProfile>
   <activeProfile>torquebox-repos</activeProfile>
  </activeProfiles>

</settings>
