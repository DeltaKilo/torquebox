<module xmlns="urn:jboss:module:1.0" name="org.torquebox.core">

    <resources>
        <resource-root path="${project.artifactId}-${project.version}.jar"/>
<!--
        <resource-root path="jruby-complete-${version.jruby}.jar"/>
-->
        <resource-root path="hibernate-commons-annotations-${version.org.hibernate.commons.annotations}.jar"/>
        <resource-root path="hibernate-search-${version.org.hibernate.search}.jar"/>
        <resource-root path="hibernate-search-analyzers-${version.org.hibernate.search}.jar"/>
        <resource-root path="infinispan-query-${version.org.infinispan}.jar"/>
        <resource-root path="lucene-analyzers-${version.org.apache.lucene.other}.jar"/>
        <resource-root path="lucene-core-3.3.0.jar"/>
        <resource-root path="lucene-highlighter-${version.org.apache.lucene.other}.jar"/>
        <resource-root path="lucene-memory-${version.org.apache.lucene.other}.jar"/>
        <resource-root path="lucene-misc-${version.org.apache.lucene.other}.jar"/>
        <resource-root path="lucene-smartcn-${version.org.apache.lucene.other}.jar"/>
        <resource-root path="lucene-spatial-${version.org.apache.lucene.other}.jar"/>
        <resource-root path="lucene-spellchecker-${version.org.apache.lucene.other}.jar"/>
        <resource-root path="lucene-stempel-${version.org.apache.lucene.other}.jar"/>
    </resources>

    <exports>
      <include-set>
        <path name="org/jruby"/>
        <path name="org/jruby/**"/>
        <path name="org/jruby/ast"/>
        <path name="org/jruby/libraries"/>
        <path name="org/yaml"/>
        <path name="org/yaml/**"/>
        <path name="org/yaml/snakeyaml"/>
        <path name="org/yaml/snakeyaml/error"/>
        <path name="org/torquebox/core/util"/>
        <path name="org/torquebox/bootstrap/as"/>
        <path name="org/infinispan/query"/>
        <path name="org/infinispan/query/impl"/>
      </include-set>
    </exports>

    <dependencies>
        <module name="org.torquebox.bootstrap" export="true"/>
        <module name="javax.api"/>
        <module name="org.jboss.staxmapper"/>
        <module name="org.jboss.as.controller"/>
        <module name="org.jboss.as.deployment-repository"/>
        <module name="org.jboss.as.ee"/>
        <module name="org.jboss.as.naming"/>
        <module name="org.jboss.as.jmx"/>
        <module name="org.jboss.as.server"/>
        <module name="org.jboss.as.transactions"/>
        <module name="org.jboss.modules"/>
        <module name="org.jboss.msc"/>
        <module name="org.jboss.logging"/>
        <module name="org.jboss.stdio"/>
        <module name="org.jboss.vfs"/>
        <module name="org.infinispan"/>
<!--
        <module name="org.jboss.threads"/>
        <module name="org.jboss.as.deployment-repository"/>
-->
    </dependencies>
</module>

