<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <parent>
    <groupId>org.torquebox</groupId>
    <artifactId>gems-parent</artifactId>
    <version>2.0.0-SNAPSHOT</version>
    <relativePath>../parent/pom.xml</relativePath>
  </parent>

  <modelVersion>4.0.0</modelVersion>
  <groupId>rubygems</groupId>
  <artifactId>torquebox-rake-support</artifactId>
  <packaging>gem</packaging>
  <name>TorqueBox Rake Support</name>
  <description />


  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-artifacts</id>
            <phase>package</phase>
            <goals>
              <goal>attach-artifact</goal>
            </goals>
            <configuration>
              <artifacts>
                <artifact>
                  <file>share/rails-template.rb</file>
                  <type>template.rb</type>
                </artifact>
                <artifact>
                  <file>share/torquebox.conf</file>
                  <type>torquebox.conf</type>
                </artifact>
                <artifact>
                  <file>share/Rakefile</file>
                  <type>Rakefile</type>
                </artifact>
              </artifacts>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>de.saumya.mojo</groupId>
        <artifactId>jruby-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>install-gem</id>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
