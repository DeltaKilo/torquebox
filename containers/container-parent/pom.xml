<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <parent>
    <groupId>org.torquebox</groupId>
    <artifactId>torquebox-parent</artifactId>
    <version>1.1.1-SNAPSHOT</version>
    <relativePath>../../parent/pom.xml</relativePath>
  </parent>

  <modelVersion>4.0.0</modelVersion>
  <groupId>org.torquebox</groupId>
  <artifactId>container-parent</artifactId>
  <packaging>pom</packaging>
  <name>TorqueBox Container Parent</name>
  <description />

  <dependencies>
    <dependency>
      <groupId>org.jboss.scanning</groupId>
      <artifactId>scanning-plugins</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>de.saumya.mojo</groupId>
          <artifactId>gem-maven-plugin</artifactId>
          <executions>
            <execution>
              <id>default-initialize</id>
              <configuration>
                <gemHome>${project.parent.build.directory}/rubygems</gemHome>
                <gemPath>${project.parent.build.directory}/rubygems</gemPath>
                <fork>true</fork>
              </configuration>
            </execution>
              <execution>
              <id>default-package</id>
              <configuration>
                <includeDependencies>true</includeDependencies>
              </configuration>
            </execution>
            <execution>
              <id>default-install</id>
              <goals>
                <goal>install</goal>
              </goals>
              <phase>none</phase>
              <configuration>
                <installArgs>-f</installArgs>
                <gemHome>${project.parent.build.directory}/rubygems</gemHome>
                <gemPath>${project.parent.build.directory}/rubygems</gemPath>
              </configuration>
            </execution>
          </executions>
        </plugin>
        <plugin>
          <groupId>de.saumya.mojo</groupId>
          <artifactId>rspec-maven-plugin</artifactId>
          <executions>
            <execution>
              <id>run-specs</id>
              <phase>test</phase>
              <goals>
                <goal>test</goal>
              </goals>
              <configuration>
                <gemHome>${project.parent.build.directory}/rubygems</gemHome>
                <gemPath>${project.parent.build.directory}/rubygems</gemPath>
                <fork>true</fork>
                <systemProperties>
                  <property>
                    <name>log4j.configuration</name>
                    <value>test-log4j.xml</value>
                  </property>
                </systemProperties>
              </configuration>
            </execution>
          </executions>
        </plugin>
        <plugin>
          <artifactId>maven-resources-plugin</artifactId>
          <executions>
            <execution>
              <inherited>true</inherited>
              <id>test-resources</id>
              <goals>
                <goal>testResources</goal>
              </goals>
              <phase>process-test-resources</phase>
            </execution>
          </executions>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

  <profiles>
    <profile>
      <id>assemblage-present</id>
      <activation>
        <file>
          <exists>./../../assemblage/assembly/target/stage/</exists>
        </file>
      </activation>
      <build>
        <pluginManagement>
          <plugins>
            <plugin>
              <groupId>de.saumya.mojo</groupId>
              <artifactId>gem-maven-plugin</artifactId>
              <executions>
                <execution>
                  <id>install-gem-into-assemblage</id>
                  <inherited>true</inherited>
                  <goals>
                    <goal>install</goal>
                  </goals>
                  <phase>none</phase>
                  <configuration>
                    <binDirectory>${project.basedir}/../../assemblage/assembly/target/stage/torquebox-${project.version}/jruby/bin</binDirectory>
                    <gemPath>${project.basedir}/../../assemblage/assembly/target/stage/torquebox-${project.version}/jruby/lib/ruby/gems/1.8</gemPath>
                    <gemHome>${project.basedir}/../../assemblage/assembly/target/stage/torquebox-${project.version}/jruby/lib/ruby/gems/1.8</gemHome>
                  </configuration>
                </execution>
              </executions>
            </plugin>
          </plugins>
        </pluginManagement>
      </build>
    </profile>
  </profiles>
</project>
